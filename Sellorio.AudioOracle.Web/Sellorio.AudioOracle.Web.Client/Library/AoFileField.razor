<AoFormInputWrapper Label="@Label">
    <MudGrid Spacing="0" Justify="Justify.FlexEnd">
        <AoFileInput Accept="Accept" Value="Value" ValueChanged="ValueChanged" />
    </MudGrid>
</AoFormInputWrapper>

@code {
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public IList<string>? Accept { get; set; }

    [Parameter]
    public IBrowserFile? Value { get; set; }

    [Parameter]
    public EventCallback<IBrowserFile> ValueChanged { get; set; }
}
