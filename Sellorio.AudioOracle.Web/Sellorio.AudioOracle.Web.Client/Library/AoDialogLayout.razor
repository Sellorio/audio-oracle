<div class="ao-dialog-layout" style="@($"--width: {PreferredWidth}px")">
	<MudDialog>
		<TitleContent>
			<AoHeading3>@Title</AoHeading3>
		</TitleContent>
		<DialogContent>
			@ChildContent
		</DialogContent>
	</MudDialog>
</div>

@code {
	[Parameter, EditorRequired]
	public required string Title { get; set; }

	[Parameter]
	public int PreferredWidth { get; set; } = 400;

	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
