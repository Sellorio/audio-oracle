@using Sellorio.AudioOracle.Web.Client.Library.Providers
@inherits Base.AoDisableComponent

<MudMenu Dense Disabled="DisableContent || Loading">
	<ActivatorContent>
		<MudButton StartIcon="@(Loading ? null : Icons.Material.Filled.Menu)" Variant="Variant.Filled" Color="Color.Primary">
			@if (Loading)
			{
				<MudProgressCircular Size="Size.Small" Indeterminate />
			}
		</MudButton>
	</ActivatorContent>
	<ChildContent>
		<AoDisableStateProvider>
			@ChildContent
		</AoDisableStateProvider>
	</ChildContent>
</MudMenu>

@code {
	[Parameter]
	public bool Loading { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
