@using Sellorio.AudioOracle.Web.Client.Library.Providers.DisableState

<MudNavLink Href="@Href" Disabled="Disabled || DisableStateScope.IsDisabled">@Label</MudNavLink>

@code {
	[CascadingParameter]
	public required IDisableStateScope DisableStateScope { get; set; }

	[Parameter]
	public string? Href { get; set; }

	[Parameter]
	public string? Label { get; set; }

	[Parameter]
	public bool Disabled { get; set; }
}
