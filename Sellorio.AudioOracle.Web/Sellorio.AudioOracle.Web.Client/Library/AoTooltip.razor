@inherits Base.AoDisableComponent

<MudTooltip Text="@Text" TooltipContent="TooltipContent" Inline="!Block" ChildContent="ChildContent" Disabled="DisableContent || Text == null && TooltipContent == null" />

@code {
	[Parameter]
	public string? Text { get; set; }

	[Parameter]
	public bool Block { get; set; }

	[Parameter]
	public RenderFragment? TooltipContent { get; set; }

	[Parameter]
	public RenderFragment? ChildContent { get; set; }
}
